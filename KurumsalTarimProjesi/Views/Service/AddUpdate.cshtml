@model EntityLayer.Concrete.Service
@{
    ViewData["Title"] = "AddUpdate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Hizmet Ekleme</h4>
            <form class="forms-sample" method="post">
                @Html.HiddenFor(x=>x.ServiceID)
                <div class="form-group">
                    <label for="exampleInputName1">Başlık</label>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="Lütfen Başlık Giriniz" asp-for="Title">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Görsel</label>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="Lütfen Görsel Url Giriniz" asp-for="İmage">
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Açıklama</label>
                    <textarea class="form-control" id="exampleTextarea1" rows="4" placeholder="Lütfen Açıklama Giriniz" asp-for="Description"></textarea>
                </div>
                <button type="submit" class="btn btn-outline-primary">Kaydet</button>
                <button class="btn btn-light">Geri Dön</button>
            </form>
        </div>
    </div>
</div>


