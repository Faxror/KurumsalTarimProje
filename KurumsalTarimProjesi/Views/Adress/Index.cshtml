@using EntityLayer.Concrete
@model List<Adress>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Adres Listesi</h4>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Açıklama 1</th>
                            <th>Açıklama 2</th>
                            <th>Açıklama 3</th>
                            <th>Açıklama 4</th>
                            <th>Map İnfo</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {   
                            <tr>
                                <td>@item.AddressID</td>
                                <td>@item.Description1</td>
                                <td>@item.Description2</td>
                                <td>@item.Description3</td>
                                <td>@item.Description4</td>
                                <td>@item.Mapİnfo</td>
                                <td><a href="/Adress/UpadataAdres/@item.AddressID" class="btn btn-outline-success">Düzenle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
