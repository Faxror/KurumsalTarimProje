@using EntityLayer.Concrete
@model List<Annoncement>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyurular Listesi</h4>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th>İşlemler</th>
                            <th>Görev</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.AnnoncementID</td>
                                <td>@item.Title</td>
                                <td>@item.Date</td>
                                <td><a href="/Annoncement/DeleteService/@item.AnnoncementID" class="btn btn-outline-danger">Sil</a> <a href="/Annoncement/AddUpdate/@item.AnnoncementID" class="btn btn-outline-success">Düzenle</a></td>
                                <td><a href="/Annoncement/ChangeStatusToTrue/@item.AnnoncementID" class="btn btn-outline-warning">Aktif Yap</a> <a href="/Annoncement/ChangeStatusToFalse/@item.AnnoncementID" class="btn btn-outline-secondary">Pasif Yap</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Annoncement/AddAn/" class="btn btn-outline-info">Yeni Duyuru Ekle</a>
            </div>
        </div>
    </div>
</div>
