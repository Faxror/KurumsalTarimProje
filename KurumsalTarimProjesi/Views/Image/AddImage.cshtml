@model EntityLayer.Concrete.Image
@{
    ViewData["Title"] = "AddImage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Resim Ekleme</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Başlık</label>
                    <span asp-validation-for="Title" class="text text-danger"></span>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="Lütfen Başlık Giriniz" asp-for="Title">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Göresel Yolu</label>
                    <span asp-validation-for="ImageUrl" class="text text-danger"></span>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="Lütfen Görsel Giriniz" asp-for="ImageUrl">
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Açıklama</label>
                    <span asp-validation-for="Description" class="text text-danger"></span>
                    <textarea class="form-control" id="exampleTextarea1" rows="4" placeholder="Lütfen Açıklama Giriniz" asp-for="Description"></textarea>
                </div>
                <button type="submit" class="btn btn-outline-primary">Kaydet</button>
                <button class="btn btn-light">Geri Dön</button>
            </form>
        </div>
    </div>
</div>

